<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/all_background"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/_5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/transparent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_pubg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200dp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_margin="@dimen/_15dp"
        app:cardCornerRadius="@dimen/_15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/banner" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_below="@+id/card_view_pubg"
            android:layout_marginTop="@dimen/_15dp"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/_5dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_weapon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#40FFFFFF"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_border_result">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">
                    <LinearLayout
                        android:id="@+id/ll_weapon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_12dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_weapon"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:scaleType="center"
                            android:layout_centerVertical="true"
                            android:src="@drawable/weapon" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_weapon1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center_horizontal"
                        android:layout_toRightOf="@+id/ll_weapon">
                        <TextView
                            android:id="@+id/txt_weapon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/weapon"
                            android:fontFamily="@font/postnobillscolombo_medium"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_25dp" />
                    </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_attechment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_weapon"
                android:layout_marginTop="@dimen/_20dp"
                app:cardBackgroundColor="#40FFFFFF"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_border_result">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">
                    <LinearLayout
                        android:id="@+id/ll_attechment"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_12dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_attechment"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:scaleType="center"
                            android:layout_centerVertical="true"
                            android:src="@drawable/attechment" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_attechment1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center_horizontal"
                        android:layout_toRightOf="@+id/ll_attechment">
                        <TextView
                            android:id="@+id/txt_attechment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Attachment"
                            android:fontFamily="@font/postnobillscolombo_medium"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_25dp" />
                    </LinearLayout>
                </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_ammos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_attechment"
                android:layout_marginTop="@dimen/_20dp"
                app:cardBackgroundColor="#40FFFFFF"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_border_result">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">
                    <LinearLayout
                        android:id="@+id/ll_ammos"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_12dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_ammos"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:scaleType="center"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ammos" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_ammos1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center_horizontal"
                        android:layout_toRightOf="@+id/ll_ammos">

                        <TextView
                            android:id="@+id/txt_ammos"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/Ammos"
                            android:fontFamily="@font/postnobillscolombo_medium"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_25dp" />
                    </LinearLayout>
                </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:id="@+id/ads_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_below="@+id/cv_ammos">
                <com.facebook.ads.NativeAdLayout
                    android:id="@+id/native_ad_container"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_20dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
                <com.google.android.ads.nativetemplates.TemplateView
                    android:visibility= "gone"
                    android:id= "@+id/nativeTemplateView"
                    app:gnt_template_type="@layout/gnt_small_template_view"
                    android:layout_width= "match_parent"
                    android:layout_height= "wrap_content" />
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_equipment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ads_layout"
                android:layout_marginTop="@dimen/_20dp"
                app:cardBackgroundColor="#40FFFFFF"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_border_result">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">
                    <LinearLayout
                        android:id="@+id/ll_equipment"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_12dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_equipment"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:scaleType="center"
                            android:layout_centerVertical="true"
                            android:src="@drawable/equipment" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_equipment1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center_horizontal"
                        android:layout_toRightOf="@+id/ll_equipment">
                        <TextView
                            android:id="@+id/txt_equipment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/equipments"
                            android:fontFamily="@font/postnobillscolombo_medium"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_25dp" />
                    </LinearLayout>
                </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_vehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_equipment"
                android:layout_marginTop="@dimen/_20dp"
                app:cardBackgroundColor="#40FFFFFF"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_border_result">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">
                    <LinearLayout
                        android:id="@+id/ll_vehicle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_12dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_vehicle"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/vehicle" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_vehicle1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center_horizontal"
                        android:layout_toRightOf="@+id/ll_vehicle">
                        <TextView
                            android:id="@+id/txt_vehicle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/vehicle"
                            android:fontFamily="@font/postnobillscolombo_medium"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_25dp" />
                    </LinearLayout>
                </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_consumables"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_vehicle"
                android:layout_marginTop="@dimen/_20dp"
                app:cardBackgroundColor="#40FFFFFF"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_border_result">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">
                    <LinearLayout
                        android:id="@+id/ll_consumables"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_12dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_consumables"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:scaleType="center"
                            android:layout_centerVertical="true"
                            android:src="@drawable/consumables" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_consumables1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center_horizontal"
                        android:layout_toRightOf="@+id/ll_consumables">
                        <TextView
                            android:id="@+id/txt_consumables"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/consumables"
                            android:fontFamily="@font/postnobillscolombo_medium"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_25dp" />
                    </LinearLayout>
                </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>